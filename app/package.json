{
  "name": "@boilerplate/app",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "node ./esbuild.config.js",
    "start": "node --import=extensionless/register ./dist/index.js"
  },
  "nodemonConfig": {
    "watch": "src",
    "ignore": [
      "dist/**",
      "node_modules/**"
    ],
    "ext": "ts",
    "exec": "rm -rf ./dist && yarn node ./esbuild.config.js && yarn node --import=extensionless/register ./dist/index.js"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "extensionless": "^1.9.9",
    "fastify": "^5.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "esbuild": "^0.25.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.3"
  },
  "packageManager": "yarn@4.6.0"
}
