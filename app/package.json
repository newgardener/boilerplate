{
  "name": "@boilerplate/app",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "node ./esbuild.config.js",
    "start": "node --import=extensionless/register ./dist/index.js"
  },
  "nodemonConfig": {
    "watch": "src",
    "ignore": [
      "dist/**",
      "node_modules/**"
    ],
    "ext": "ts",
    "exec": "rm -rf ./dist && yarn node ./esbuild.config.js && yarn node --import=extensionless/register ./dist/index.js | yarn pino-pretty --singleLine"
  },
  "dependencies": {
    "@fastify/autoload": "^6.1.0",
    "@fastify/cors": "^10.0.2",
    "@fastify/env": "^5.0.2",
    "@react-router/node": "^7.3.0",
    "@sinclair/typebox": "^0.34.27",
    "dotenv": "^16.4.7",
    "dotenv-safe": "^9.1.0",
    "extensionless": "^1.9.9",
    "fastify": "^5.2.1",
    "fastify-graceful-shutdown": "^4.0.1",
    "fastify-plugin": "^5.0.1",
    "isbot": "^5.1.23",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.3.0"
  },
  "devDependencies": {
    "@react-router/dev": "^7.3.0",
    "@types/node": "^20",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "esbuild": "^0.25.0",
    "nodemon": "^3.1.9",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "yarn@4.6.0"
}
